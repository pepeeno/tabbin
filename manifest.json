{
  "manifest_version": 3,
  "name": "Tabbin",
  "version": "1.0",
  "description": "A tab management extension",
  "permissions": [
    "tabs",
    "storage",
    "downloads",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["icons/default-favicon.png"],
    "matches": ["<all_urls>"]
  }]
}